<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"  doc="If true, limits joint range [-PI, PI] on all joints." />
  <arg name="paused" default="true" doc="Starts gazebo in paused mode" />
  <arg name="gui" default="true" doc="Starts gazebo gui" />
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find ur_with_cam_gazebo)/worlds/testWorld10.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <include file="$(find ur_with_cam_gazebo)/launch/ur5_on_rail_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo (pi/2: 1.5708, pi/4: 0.785398)-->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="
    -urdf -param robot_description -model robot
    -z 0
    " respawn="false" output="screen" />
<!---J shoulder_pan_joint -0.785398
    -J shoulder_lift_joint 0
    -J elbow_joint 0.785398
    -J wrist_1_joint -0.785398
    -J wrist_2_joint -0.785398
-->

  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

  <!-- start this controller -->
  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
  <rosparam file="$(find ur_with_cam_gazebo)/config/rail_controller.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  <node name="rail_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn rail_controller" respawn="false" output="screen"/>

  <!-- load other controllers -->
  <node name="ros_control_controller_manager" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="load joint_group_position_controller" />
  <node name="rail_ros_control_controller_manager" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="load rail_joint_group_position_controller" />

</launch>
